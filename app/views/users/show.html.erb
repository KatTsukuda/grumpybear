<h3 class="org_name">
  <%= @user.org_name%>
  <% if @user == current_user %>
    <%= link_to "Edit", edit_user_path(@user) %>
    <%= link_to "Delete", @user, method: :delete, data: {confirm: "Are you sure?"} %>
  <% end %>
</h3>
<p> Email: <%= @user.email %> </p>
<p> Country: <%= @user.country %> </p>
<p> Member since: <%= @user.created_at.strftime("%b. %d, %Y") %> </p>

<h3>Current Campaigns</h3>
<% @user.campaigns.each do |cpgn| %>
  <li><%= cpgn.campaign_title %></li>
  <li><%= cpgn.created_at.strftime("Created on: %b. %d, %Y") %></li>
<% end %>

<% if @user.campaigns.count == 0 %>
  Start your first campaign!
  <%= link_to image_tag("heavy-plus-sign.png", :alt => "Add New", :class => "add-new"), new_campaign_path(@user) %>
<% else %>
  <%= @user.campaigns.count %> current campaigns
  <%= link_to "New Campaign", new_campaign_path(@user) %>
<% end %>
