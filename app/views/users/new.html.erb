<%= form_for @user do |form| %>
  <%= render partial: '/users/form', object: form %>
  <div class="password-field">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control" %>
  </div><br>
  <div class="submit-field">
    <%= form.submit 'Create Account', :class => 'def_button'  %>
  </div>
<% end %>
