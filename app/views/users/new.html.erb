<h3>Join Grumpy Bear</h3>

<div class="form col-md-5 col-sm-6 col-xs-10 col-sm-offset-4">
  <%= form_for @user do |form| %>
    <%= render partial: '/users/form', object: form %>
    <div class="form-label"><%= form.label "Password" %></div>
    <div><%= form.password_field :password %></div>
    <%= form.submit 'Create Account', class:"submit-btn" %>
  <% end %>
</div>
